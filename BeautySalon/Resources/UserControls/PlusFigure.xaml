<UserControl x:Class="BeautySalon.Resources.UserControls.PlusFigure"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeautySalon.Resources.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Rectangle Fill="{Binding FillColor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:PlusFigure}}}" 
                   Width="2"/>
        <Rectangle Fill="{Binding FillColor, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type local:PlusFigure}}}" 
                   Height="2"/>
    </Grid>
</UserControl>
